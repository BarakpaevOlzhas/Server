<Window x:Class="Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Server"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox Height="312" Name="txtLog" IsReadOnly="True"  Margin="10,10,10,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <ComboBox Name="cbIpServer" HorizontalAlignment="Left" Margin="10,349,0,0" VerticalAlignment="Top" Width="208"/>
        <TextBox Name="txtPort" HorizontalAlignment="Left" Height="23" Margin="253,348,0,0" TextWrapping="Wrap" Text="12345" VerticalAlignment="Top" Width="120"/>
        <Label Content="Server IP Address" HorizontalAlignment="Left" Margin="10,323,0,0" VerticalAlignment="Top"/>
        <Label Content="Server Port" HorizontalAlignment="Left" Margin="253,323,0,0" VerticalAlignment="Top"/>
        <Button Content="Start" Name="btnStart" HorizontalAlignment="Left" Margin="412,349,0,0" VerticalAlignment="Top" Width="75" Click="BtnStart_Click"/>
        <Button Content="Close" HorizontalAlignment="Left" Margin="517,349,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
